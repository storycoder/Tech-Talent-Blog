<p id="notice"><%= notice %></p>

<div class = "container-fluid">
<div class="panel panel-primary">
  <div class="panel-heading">
    <%= @blogpost.title %>
  </div>
  <div class="panel-body">
    <p>by <strong><%=@blog_post.author%>g</strong><span class="posted-at">posted at: <%= blog_post.created_at.strftime('%m/%d/%Y at %I:%M%p') %></span></p>
    <p><%= @blog_post.blog_entry%></p>
  </div>
  <div class="panel-footer">
    <%= link_to 'Edit Post', edit_blog_post_path(@blog_post), class: "btn btn-warning" %>
  </div>
</div> #  <<< this div created the primary panel
<div class="panel panel-success">
  <div class="panel-heading">
    Leave a Comment
  </div>
  <div class="panel-body">
    <%= render 'comments/form' %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-header">
    <h4>Comments</h4>
  </div>
  <%= @blog_post.comments.each do |comment|%>
  <div class="panel-body"
    <p><strong><%=comment.author %></strong> said:</p>
    <p><%= comment.comment_entry %></p>
    <p><span class="posted-at"><%= comment.created_at.strftime('%m/%d/%Y' at '%H:%M:%S')%></span></p>
  <% end %>
</div>
<div>
  <%= link_to 'Back to Index', blog_posts_path, class: "btn btn-primary" %>
</div>
</div>